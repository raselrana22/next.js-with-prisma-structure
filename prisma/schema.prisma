model InvoiceProduct { // Renamed to follow Prisma naming conventions (singular and PascalCase)
  id         BigInt    @id @default(autoincrement())
  invoice_id BigInt
  product_id BigInt
  user_id    BigInt
  qty        Int       // Assuming qty is an integer
  sale_price Decimal   // Assuming sale_price is a decimal or numeric type
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt // Corrected to `updated_at` in PascalCase
}